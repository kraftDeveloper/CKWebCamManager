@page
@model IndexModel
@{
    ViewData["Title"] = "Camera Viewer";
}

<link href="https://vjs.zencdn.net/8.3.0/video-js.css" rel="stylesheet" />
<script src="https://vjs.zencdn.net/8.3.0/video.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 bg-dark text-white p-3">
            <h4>Cameras</h4>
            <ul class="list-group">
                @foreach (var camera in Model.Cameras)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-white">
                        @camera.Name
                        <span>
                            <a asp-page="/Edit" asp-route-id="@camera.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-page="/Delete" asp-route-id="@camera.Id" class="btn btn-sm btn-danger">Delete</a>
                        </span>
                    </li>
                }
            </ul>
            <a asp-page="/Add" class="btn btn-success mt-3">Add Camera</a>
        </div>
        <div class="col-md-9">
            <div class="row">
                @foreach (var camera in Model.Cameras)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card bg-dark text-white">
                            <div class="card-header">@camera.Name</div>
                            <div class="card-body p-0">
                                <video id="video-@camera.Id" class="video-js vjs-fluid" controls preload="auto" poster="">
                                    <source src="/streams/@camera.Id/stream.m3u8" type="application/x-mpegURL">
                                </video>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.video-js').forEach(function(videoElement) {
        var player = videojs(videoElement.id);
        if (Hls.isSupported()) {
            var hls = new Hls();
            hls.loadSource(videoElement.querySelector('source').src);
            hls.attachMedia(videoElement);
        } else if (videoElement.canPlayType('application/vnd.apple.mpegurl')) {
            // For Safari
        }
        player.play();
    });
</script>

<style>
    body { background-color: #1e1e1e; color: white; }
    .card { border: 1px solid #333; }
    .video-js { width: 100%; height: 300px; background-color: black; }
</style>